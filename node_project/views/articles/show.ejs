            <%= article.createdAt.toLocaleDateString() %>
        </div>
        <a href="/" class="btn btn-primary">All Articles</a>
        <a href="/articles/edit/<%= articles.id %>" class="btn btn-info">Edit</a>
        <div>
            <%= articles.markdown %>
        </div>
    </div>

