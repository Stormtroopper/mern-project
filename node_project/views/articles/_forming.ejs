    <label for="description">Description</label>
    <textarea required name="description" id="description" class="form-control"><%= articles.description %></textarea>
</div>
<div class="form-group">
    <label for="markdown">MarkDown</label>
    <textarea required name="markdown" id="markdown" class="form-control"><%= articles.markdown %></textarea>

</div>
<div class="form-group">
    <label for="role">Role</label>
    <input required value="<%= articles.role %>" type="text" name="role" class="form-control"><br>
</div><br> 
